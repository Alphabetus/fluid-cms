{% extends "base_admin.html.twig" %}

{% block admin_body %}

    <div class="container-fluid p-0">
        <div class="row justify-content-between">
            <div class="col-6 align-self-center-center">
                <h1>Existent Pages</h1>
            </div>
            <div class="col-6 align-self-center text-right">
                <a href="{{ path("admin.pages.new") }}" class="btn btn-sm btn-outline-primary">Create Page</a>
            </div>
        </div>
        <hr>
    </div>

    <div class="container-fluid p-0">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Published</th>
                    <th scope="col" class="text-center">In Menu</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>

                {% for page in pages %}
                    <tr>
                        <th scope="row">{{ page.id }}</th>
                        <td>{{ page.title }}</td>
                        <td class="text-truncate">{{ page.description }}</td>
                        <td class="text-center">{% if page.active %}<img src="{{ asset("build/images/icons/green_ball.png") }}" alt="page active" class="icon-md"/>{% else %}<img src="{{ asset("build/images/icons/red_ball.png") }}" alt="page active" class="icon-md"/>{% endif %}</td>
                        <td class="text-center">{% if page.inNavigation %}<img src="{{ asset("build/images/icons/green_ball.png") }}" alt="page active" class="icon-md"/>{% else %}<img src="{{ asset("build/images/icons/red_ball.png") }}" alt="page active" class="icon-md"/>{% endif %}</td>
                        <td class="text-center">[edit]</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock %}