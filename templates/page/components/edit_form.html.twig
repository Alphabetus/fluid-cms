{{ form_start(form) }}
<div class="row justify-content-center">

    <div class="col-12">
        {{ form_label(form.title,"app.backend.forms.edit_page_metadetails.labels.pagetitle"|trans) }}


        {{ form_widget(form.title, {
            "attr": {
                "class" : "form-control",
                "placeholder": "app.backend.forms.edit_page_metadetails.placeholders.pagetitle"|trans
            }
        }) }}
    </div>

    <div class="col-12 mt-2">
        {{ form_label(form.description, "app.backend.forms.edit_page_metadetails.labels.pagedescription"|trans) }}
        {{ form_widget(form.description, {
            "attr": {
                "class" : "form-control tinymce",
                "placeholder" : "app.backend.forms.edit_page_metadetails.placeholders.pagedescription"|trans
            }
        }) }}
    </div>

    <div class="col-12 mt-2">
        {{ form_label(form.slug, "app.backend.forms.edit_page_metadetails.labels.urlpath"|trans, {"label_html" : true}) }}
        {{ form_widget(form.slug, {
