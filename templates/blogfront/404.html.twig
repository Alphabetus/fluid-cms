{% extends "base.html.twig" %}

{% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">LOGO-Fluid CMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                {% for nav_page in nav_pages %}
                    {% if nav_page.inNavigation and nav_page.active %}
                        <li class="nav-item">
                            <a href="/{{ nav_page.slug }}" class="nav-link">{{ nav_page.title|capitalize }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

            </ul>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid vertical-fill-fixed">
        <div class="row h-100">
            <div class="col-12 align-self-center text-center">
                {{ "app.backend.content.pages.not_found.title"|trans }}<br>
                <small>
                    {{ "app.backend.content.pages.not_found.disclaimer"|trans }}
                </small>
            </div>
        </div>
    </div>
{% endblock %}